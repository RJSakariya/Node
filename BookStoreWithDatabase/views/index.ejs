<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Bookstore</title>
    <style>
        body {
            font-family: Arial, sans-serif;
            margin: 0;
            padding: 0;
            background-color: #f4f4f9;
            color: #333;
        }

        .navbar {
            background-color: #5a67d8;
            color: white;
            padding: 10px 20px;
            display: flex;
            justify-content: space-between;
            align-items: center;
        }

        .navbar h1 {
            margin: 0;
            font-size: 20px;
        }

        .navbar ul {
            list-style-type: none;
            margin: 0;
            padding: 0;
            display: flex;
        }

        .navbar ul li {
            margin-left: 15px;
        }

        .navbar ul li a {
            color: white;
            text-decoration: none;
            font-size: 16px;
            transition: color 0.3s;
        }

        .navbar ul li a:hover {
            color: #c3c8ff;
        }

        .books {
            padding: 20px;
            display: grid;
            grid-template-columns: repeat(5, 1fr);
            gap: 15px;
        }

        .book {
            background: white;
            padding: 15px;
            border: 1px solid #ddd;
            border-radius: 5px;
            text-align: left;
            box-shadow: 0 2px 5px rgba(0, 0, 0, 0.1);
            transition: transform 0.2s, box-shadow 0.2s;
        }

        .book:hover {
            transform: translateY(-5px);
            box-shadow: 0 4px 10px rgba(0, 0, 0, 0.2);
        }

        .book .image {
            width: 100%;
            height: 200px;
            display: flex;
            align-items: center;
            justify-content: center;
            overflow: hidden;
            border-radius: 10px;
            background-color: #f9f9f9;
        }

        .book img {
            width: fit-content;
            height: fit-content;
            object-fit: cover;
            border-radius: 7px;
        }

        .book h2 {
            margin: 10px 0 5px;
            font-size: 22px;
            color: #2d3748;
        }

        .book h3 {
            margin: 0 0 5px;
            font-size: 16px;
            color: #4a5568;
        }

        .book h4 {
            margin: 5px 0;
            font-size: 15px;
            color: #718096;
        }

        .book p {
            margin: 5px 0 10px;
            font-size: 15px;
            color: #4a5568;
        }

        .book .actions {
            display: flex;
            margin-top: 10px;
        }

        .book .actions button {
            border: none;
            padding: 10px 15px;
            font-size: 14px;
            font-weight: bold;
            border-radius: 5px;
            cursor: pointer;
            transition: background-color 0.3s, color 0.3s;
        }

        .book .actions .edit {
            background-color: #38a169;
            color: white;
        }

        .book .actions .edit:hover {
            background-color: #2f855a;
        }

        .book .actions .delete {
            background-color: #e53e3e;
            color: white;
        }

        .book .actions .delete:hover {
            background-color: #c53030;
        }
    </style>
</head>

<body>
    <nav class="navbar">
        <h1>Bookstore</h1>
        <ul>
            <li><a href="AddBook">Add Book</a></li>
        </ul>
    </nav>

    <div class="books">
        <% Books && Books.forEach(book => { %>
            <div class="book">
                <div class="image">
                    <img src="<%= book.image %>" alt="<%= book.title %>">
                </div>
                <h2><%= book.title %></h2>
                <h3>Author: <%= book.author %></h3>
                <h4>Price: <%= book.price %> $</h4>
                <p><%= book.description %></p>
                <div class="actions">
                    <a href="/EditBook/<%= book.id%>"><button class="edit">Edit</button></a>
                    <a href="/Delete?id=<%= book.id%>"><button class="delete">Delete</button></a>
                </div>
            </div>
        <% }); %>
    </div>
</body>

</html>
