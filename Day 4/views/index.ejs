<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Student Details</title>
    <style>
        body {
            font-family: Arial, sans-serif;
            margin: 0;
            padding: 0;
            background-color: #f4f4f9;
            color: #333;
            display: flex;
            flex-direction: column;
            align-items: center;
            min-height: 100vh;
        }

        h1 {
            text-align: center;
            color: #4c90af;
            margin-bottom: 20px;
        }

        form {
            display: flex;
            flex-direction: column;
            align-items: center;
            gap: 10px;
            background-color: #fff;
            padding: 20px;
            border-radius: 8px;
            box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
            width: 60%;
            max-width: 400px;
            margin-bottom: 20px;
        }

        form input {
            width: 100%;
            padding: 10px;
            border: 1px solid #ccc;
            border-radius: 4px;
            font-size: 16px;
        }

        form button {
            padding: 10px 15px;
            background-color: #4c90af;
            color: #fff;
            border: none;
            border-radius: 4px;
            font-size: 16px;
            cursor: pointer;
            width: 100%;
        }

        form button:hover {
            background-color: #3b6e87;
        }

        table {
            width: 80%;
            margin: auto;
            border-collapse: collapse;
            box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
            background-color: #fff;
            border-radius: 8px;
            overflow: hidden;
        }

        thead {
            background-color: #4c90af;
            color: #fff;
        }

        thead td {
            padding: 12px 15px;
            font-weight: bold;
        }

        tbody tr {
            border-bottom: 1px solid #ddd;
        }

        tbody tr:nth-child(odd) {
            background-color: #f9f9f9;
        }

        tbody tr:hover {
            background-color: #f1f1f1;
        }

        tbody td {
            padding: 10px 15px;
            text-align: center;
        }

        .del-btn {
            background-color: #e74c3c;
            color: #fff;
            border: none;
            padding: 5px 10px;
            border-radius: 4px;
            font-size: 14px;
            cursor: pointer;
        }
        .edit-btn {
            background-color: blue;
            color: #fff;
            border: none;
            padding: 5px 10px;
            border-radius: 4px;
            font-size: 14px;
            cursor: pointer;
        }

        .del-btn a {
            text-decoration: none;
            color: inherit;
        }
        .edit-btn a {
            text-decoration: none;
            color: inherit;
        }

        .del-btn:hover {
            background-color: #c0392b;
        }
        .edit-btn:hover {
            background-color: #0404e6;
        }
    </style>
</head>
<body>
    <h1>Student Details</h1>
    <form method="post" action="/add">
        <input type="text" name="name" placeholder="Enter Student Name" required/>
        <input type="text" name="course" placeholder="Enter Student Course" required/>
        <button type="submit">Submit</button>
    </form>
    <table>
        <thead>
            <tr>
                <td>Id</td>
                <td>Name</td>
                <td>Course</td>
                <td>Actions</td>
            </tr>
        </thead>
        <tbody>
            <% students.map((el,ind)=>{ %>
                <tr>
                    <td><%=ind+1%></td>
                    <td><%=el.name%></td>
                    <td><%=el.course%></td>
                    <td><button class="edit-btn"><a href="/edit/<%=el.id%>">Edit</a></button> <button class="del-btn"><a href="/delete?id=<%=el.id%>">Delete</a></button></td>
                </tr>
            <% }) %>
        </tbody>
    </table>
</body>
</html>
